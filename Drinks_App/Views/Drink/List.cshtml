<div>
    <h2>Aqui se muestran todas las bebidas</h2>
</div>

<h2>@Model.CurrentCategory</h2>

@{
    foreach (var drink in Model.Drinks)
    {
        <div class="col-sm-4 col-lg-4 col-md-6">
            <div class="thumbnail">
                <img src="@drink.ImageThumbnailUrl" alt="Alternate Text" />
                <div class="caption">
                    <h3 class="pull-right">@drink.Price.ToString("c")</h3>
                    <h3>
                        <a>@drink.Name</a>
                    </h3>
                    <p>@drink.ShortDescripcion</p>
                </div>
            </div>
        </div>
    }
}

