@model Drinks_App.Data.Models.Drink
    <div class="col-sm-4 col-lg-4 col-md-6">
        <div class="thumbnail">
            <img src="@Model.ImageThumbnailUrl" alt="Alternate Text" />
            <div class="caption">
                <h3 class="pull-right">@Model.Price.ToString("c")</h3>
                <h3>
                    <a>@Model.Name</a>
                </h3>
                <p>@Model.ShortDescripcion</p>
            </div>
            <div class="addToCart text-right">
                <p class="button">
                    <a class="btn btn-success" id="cartButton" asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
                       style="color: #FFF;" asp-route-drinkId="@Model.DrinkId">Add to cart</a>
                </p>
            </div>
        </div>
    </div>